<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/android:colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/button3"
        style="@style/CustomToolbarStyle"
        app:navigationIconTint="?attr/colorControlNormal"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_regular"
        android:minHeight="61dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="@string/dark_theme"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/shareApp"
        style="@style/text_setting_second_display"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share_24" />

    <TextView
        android:id="@+id/contactSupport"
        style="@style/text_setting_second_display"
        android:text="@string/contact_support"
        app:drawableEndCompat="@drawable/ic_group_24" />

    <TextView
        android:id="@+id/userAgreement"
        style="@style/text_setting_second_display"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward_24" />


</LinearLayout>

