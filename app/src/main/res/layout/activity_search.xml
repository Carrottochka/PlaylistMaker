<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Заголовок -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarBack"
        style="@style/CustomToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="?attr/colorControlNormal"
        app:title="@string/button_search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/text_setting_second_display"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_textview"
            android:drawableStart="@drawable/ic_search_icon_16"
            android:drawablePadding="8dp"
            android:drawableTint="?attr/iconColor"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/button1"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            android:textColorHint="?attr/iconColor" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_clear_12"
            android:visibility="gone"
            app:tint="?attr/iconColor" />

    </FrameLayout>

    <!-- история поиска -->
    <FrameLayout
        android:id="@+id/historyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:visibility="gone">


        <TextView
            android:id="@+id/historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/search_history_title"
            android:textSize="19sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/clearHistoryButton"
            style="@style/InverseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/clear_history" />


    </FrameLayout>

    <!-- Контейнер для состояний (плейсхолдеры) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Плейсхолдер "нет результатов" -->
        <TextView
            android:id="@+id/placeholderMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/errors_no_found_placeholder_120"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:paddingTop="102dp"
            android:text="@string/no_results"
            android:textSize="19sp"
            android:visibility="gone" />

        <!-- Плейсхолдер "нет интернета" с кнопкой -->
        <LinearLayout
            android:id="@+id/placeholderNoInternetContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="102dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/placeholderNoInternet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/errors_no_internet_120"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:text="@string/server_error"
                android:textSize="19sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:padding="24dp"
                android:text="@string/server_error_1"
                android:textSize="19sp" />

            <Button
                android:id="@+id/refreshButton"
                style="@style/InverseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/refresh_Button" />

        </LinearLayout>

        <!-- RecyclerView для результатов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trackList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/trackList"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>