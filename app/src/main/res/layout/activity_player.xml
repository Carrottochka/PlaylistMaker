<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PlayerActivity">


        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/albumCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/album_cover"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_big"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton" />


        <TextView
            android:id="@+id/trackTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="Yesterday (Remastered 2009)"
            android:textAlignment="center"
            android:textColor="?attr/editTextBackgroundColor"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumCover" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:text="The Beatles"
            android:textAlignment="center"
            android:textColor="?attr/editTextBackgroundColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trackTitle" />


        <ImageView
            android:id="@+id/addInList"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:scaleType="center"
            android:src="@drawable/ic_add_in_list"
            app:layout_constraintBottom_toBottomOf="@id/play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/play" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginTop="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artistName" />

        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginEnd="24dp"
            android:scaleType="center"
            android:src="@drawable/ic_favorite_51"
            app:layout_constraintBottom_toBottomOf="@id/play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/play" />


        <TextView
            android:id="@+id/durationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="0:29"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/play" />


        <TextView
            android:id="@+id/duration"
            style="@style/MetadataLabel"
            android:layout_marginTop="30dp"
            android:text="@string/duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/durationValue" />

        <TextView
            android:id="@+id/durationTime"
            style="@style/MetadataValue"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/duration"
            app:layout_constraintTop_toTopOf="@id/duration"
            app:layout_constraintBottom_toBottomOf="@id/duration" />


        <TextView
            android:id="@+id/collection"
            style="@style/MetadataLabel"
            android:text="@string/collection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration" />

        <TextView
            android:id="@+id/collectionName"
            style="@style/MetadataValue"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/collection"
            app:layout_constraintTop_toTopOf="@id/collection"
            app:layout_constraintBottom_toBottomOf="@id/collection" />

        <TextView
            android:id="@+id/release"
            style="@style/MetadataLabel"
            android:text="@string/release"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collection" />

        <TextView
            android:id="@+id/releaseDate"
            style="@style/MetadataValue"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/release"
            app:layout_constraintTop_toTopOf="@id/release"
            app:layout_constraintBottom_toBottomOf="@id/release" />

        <TextView
            android:id="@+id/primaryGenre"
            style="@style/MetadataLabel"
            android:text="@string/genre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/release" />

        <TextView
            android:id="@+id/primaryGenreName"
            style="@style/MetadataValue"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/primaryGenre"
            app:layout_constraintTop_toTopOf="@id/primaryGenre"
            app:layout_constraintBottom_toBottomOf="@id/primaryGenre" />

        <TextView
            android:id="@+id/countryTrack"
            style="@style/MetadataLabel"
            android:text="@string/country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/primaryGenre" />

        <TextView
            android:id="@+id/country"
            style="@style/MetadataValue"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/countryTrack"
            app:layout_constraintTop_toTopOf="@id/countryTrack"
            app:layout_constraintBottom_toBottomOf="@id/countryTrack"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>